<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.uwb.ii.bubble_bobble.scenes.options.OptionsSceneController"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@./options.css">
    <children>
        <VBox alignment="CENTER" prefHeight="198.0" prefWidth="171.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <Button mnemonicParsing="false" onAction="#switchToBoardEditor" prefHeight="50.0" prefWidth="550.0" text="Board Editor" styleClass="button">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>

                <Button mnemonicParsing="false" onAction="#switchToMenu" prefHeight="50.0" prefWidth="450.0" styleClass="button" text="Go to menu">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>

            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

</AnchorPane>
