<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.uwb.ii.bubble_bobble.scenes.game.GameSceneController" stylesheets="@./game.css"
            fx:id="root" styleClass="root">
    <top>
        <HBox alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="secondaryButton" styleClass="menu__button"
                        text="Menu" onAction="#switchToPrimary" />
            </children>
            <padding>
                <Insets topRightBottomLeft="5"/>
            </padding>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="gameWindow" styleClass="game-window">
            <Canvas fx:id="board" styleClass="board" />
        </StackPane>
    </center>
</BorderPane>
