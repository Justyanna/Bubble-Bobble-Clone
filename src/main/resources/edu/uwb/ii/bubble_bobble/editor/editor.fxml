<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="root" styleClass="root" stylesheets="@./editor.css" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.uwb.ii.bubble_bobble.scenes.editor.EditorSceneController">
    <fx:define>
        <ToggleGroup fx:id="modes"/>
    </fx:define>
    <top>
        <BorderPane styleClass="header">
            <left>
                <HBox alignment="CENTER_LEFT" styleClass="header">
                    <children>
                        <Button fx:id="saveButton" onAction="#saveMap" prefHeight="30" prefWidth="70"
                                styleClass="options__button" text="Save"/>
                        <Button fx:id="importButton" onAction="#importMap" prefHeight="30" prefWidth="70"
                                styleClass="options__button" text="Import"/>
                        <Button fx:id="resetButton" onAction="#resetBoard" prefHeight="30" prefWidth="70"
                                styleClass="options__button" text="Reset"/>
                    </children>
                    <padding>
                        <Insets topRightBottomLeft="10"/>
                    </padding>
                </HBox>
            </left>
            <right>
                <HBox alignment="CENTER_RIGHT" styleClass="header">
                    <children>
                        <Button fx:id="secondaryButton" onAction="#switchToOptions" prefHeight="30"
                                styleClass="options__button" text="Go to options"/>
                    </children>
                    <padding>
                        <Insets topRightBottomLeft="5"/>
                    </padding>
                </HBox>

            </right>
        </BorderPane>
    </top>
    <left>
        <StackPane fx:id="boardWindow" styleClass="board-window" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets left="70.0"/>
            </BorderPane.margin>
        </StackPane>
    </left>
    <center>
        <VBox prefHeight="500.0" prefWidth="400.0" BorderPane.alignment="CENTER_LEFT">
            <children>
                <ToggleButton fx:id="wallToggleButton" onAction="#handleToggleWall" prefHeight="50.0" prefWidth="150.0"
                              toggleGroup="$modes"
                              text="Wall">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>

                </ToggleButton>
                <ToggleButton fx:id="playerToggleButton" onAction="#handleTogglePlayer"
                              prefHeight="50.0" prefWidth="150.0" styleClass="button" toggleGroup="$modes"
                              text="Player">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>

                </ToggleButton>
                <ToggleButton fx:id="enemiesToggleButton" onAction="#handleToggleWEnemies"
                              prefHeight="50.0" prefWidth="150.0" styleClass="button" toggleGroup="$modes"
                              text="Enemies">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>

                </ToggleButton>

            </children>
            <BorderPane.margin>
                <Insets left="50.0" top="5.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
